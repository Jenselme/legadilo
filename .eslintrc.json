{
  "root": true,
  "overrides": [
    {
      "files": ["*.js"],
      "extends": ["eslint:recommended"],
      "rules": {
        "no-console": [
          "error",
          {
            "allow": ["warn", "error"]
          }
        ]
      }
    }
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "htmx": true,
    "bootstrap": true
  },
  "env": { "es6": true, "browser": true }
}
